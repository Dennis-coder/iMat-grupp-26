<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="180.0" prefWidth="200.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane fx:id="clickablePane" onMouseClicked="#onClick" onMouseEntered="#onHover" onMouseExited="#hoverStopped" prefHeight="130.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="picture" fitHeight="100.0" fitWidth="120.0" layoutX="40.0" layoutY="15.0" pickOnBounds="true">
               <image>
                  <Image url="@../../../../resources/imat/images/product_88.jpg" />
               </image>
            </ImageView>
            <Label fx:id="title" layoutX="10.0" layoutY="115.0" prefHeight="25.0" prefWidth="180.0" text="Titel">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ImageView fx:id="ekoImg" fitHeight="40.0" fitWidth="40.0" layoutX="120.0" layoutY="89.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../resources/imgs/eko.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <Label fx:id="prize" layoutX="12.0" layoutY="140.0" prefHeight="35.0" prefWidth="107.0" text="Pris">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="prizePerUnit" layoutX="14.0" layoutY="168.0" prefHeight="17.0" prefWidth="61.0" text="Jmf Pris/kg" textFill="#000000ba" />
      <ComboBox fx:id="amountSelect" editable="true" layoutX="119.0" layoutY="145.0" prefHeight="25.0" prefWidth="75.0" promptText="Antal" />
      <Button fx:id="addButton" layoutX="86.0" layoutY="145.0" mnemonicParsing="false" onAction="#addButtonPressed" prefHeight="17.0" prefWidth="27.0" text="+">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Button>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</fx:root>
